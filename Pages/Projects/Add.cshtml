@page
@model AdminDashboard.Pages.Projects.AddModel
@{
}

<h1 class="text-center">Add New Project</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Project.Title" class="form-label"></label>
        <input asp-for="Project.Title" class="form-control" />
        <span asp-validation-for="Project.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Project.Discription" class="form-label"></label>
        <textarea asp-for="Project.Discription" class="form-control"></textarea>
        <span asp-validation-for="Project.Discription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Project.Technologies" class="form-label"></label>
        <select class="form-select">
            @foreach (var skill in Model.skills)
            {
                <option value="@skill.Name">@skill.Name</option>
            }
        </select>
        <span asp-validation-for="Project.Technologies" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Project.URL" class="form-label"></label>
        <input asp-for="Project.URL" class="form-control" />
        <span asp-validation-for="Project.URL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Project.CreatedAt" class="form-label"></label>
        <input type="date" min="2025-01-01" asp-for="Project.CreatedAt" class="form-control" />
        <span asp-validation-for="Project.CreatedAt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Project.ImageURL" class="form-label"></label>
        <input asp-for="Project.ImageURL" class="form-control" />
        <span asp-validation-for="Project.ImageURL" class="text-danger"></span>
    </div><div class="form-group">
        <label asp-for="Project.IsFeatured" class="form-label"></label>
        <input data-val="true" asp-for="Project.IsFeatured" class="form-control" />
        
        <span asp-validation-for="Project.IsFeatured" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Project.CategoryID" class="form-label"></label>
        <select class="form-select">
            @foreach (var cat in Model.categories)
            {
                <option value="@cat.Name">@cat.Name</option>
            }
        </select>        
        <span asp-validation-for="Project.CreatedAt" class="text-danger"></span>
    </div>
    <input type="submit" value="Add Project" class="btn btn-primary" style="width:100%;"/>
</form>
