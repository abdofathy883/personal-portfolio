@page
@model AdminDashboard.Pages.Skills.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Add New Skill</h1>

<hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Skill.Name" class="control-label"></label>
                <input asp-for="Skill.Name" class="form-control" />
                <span asp-validation-for="Skill.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Skill.Description" class="control-label"></label>
                <input asp-for="Skill.Description" class="form-control" />
                <span asp-validation-for="Skill.Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
<br />
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
