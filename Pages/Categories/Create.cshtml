@page
@model AdminDashboard.Pages.Categories.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Add New Category</h1>

<hr />
<form method="post">
    <div class="form-group">
        <label asp-for="Category.Name" class="form-label"></label>
        <input asp-for="Category.Name" class="form-control" />
        <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category.Description" class="form-label"></label>
        <input asp-for="Category.Description" class="form-control" />
        <span asp-validation-for="Category.Description" class="text-danger"></span>
    </div>
    <br />
    <input type="submit" value="Add New Category" class="btn btn-primary" style="width: 100%" />
</form>
<br />
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
